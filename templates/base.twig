{% block html_head_container %}
<!DOCTYPE html>
<html {{ site.language_attributes }}>
{% include 'html-header.twig' %}
{% endblock %}
	<body class="{{body_class}}" data-template="base.twig">
		{% block header %}
			{% include 'header.twig' %}
		{% endblock %}
		<div id="fullpage">
		{% block content %}
		{% endblock %}

		{% if sidebar %}
			<aside class="layout-sidebar">
				{{sidebar}}
			</aside>
		{% endif %}

		{% block footer %}
			{% include 'footer.twig' %}
		{% endblock %}
		</div>
	</body>
</html>