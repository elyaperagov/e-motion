{% if posts.pagination.pages is not empty %}
    <nav class="pagination-block">
        <ul class="pagination">
            {% if pagination.pages|first and pagination.pages|first.current != true %}
                <li class="first btn d-none">
                    <a href="{{ pagination.pages|first.link }}">First</a>
                </li>
            {% else %}
                <li class="first btn disabled d-none">
                    First
                </li>
            {% endif %}

            {% if pagination.prev %}
                <li class="prev d-none">
                    <a class="btn" href="{{ pagination.prev.link }}">Previous</a>
                </li>
            {% else %}
                <li class="prev d-none">
                    <a class="btn disabled" href="#">
                        <<
                    </a>
                </li>
            {% endif %}

            {% for page in pagination.pages %}
                {% if page.link %}
                    <li>
                        <a href="{{ page.link }}" class="{{ page.class }}">{{ page.title }}</a>
                    </li>
                {% else %}
                    <li class="current">
                        <span class="{{ page.class }}">{{ page.title }}</span>
                    </li>
                {% endif %}
            {% endfor %}

            {% if pagination.next %}
                <li class="next d-none">
                    <a class="btn" href="{{ pagination.next.link }}">
                        >>
                    </a>
                </li>
            {% else %}
                <li class="next d-none">                    
                    <a class="btn disabled" href="#">
                        >>
                    </a>
                </li>
            {% endif %}
            {% if pagination.pages|last and pagination.pages|last.current != true %}
                <li class="last btn d-none">
                    <a href="{{ pagination.pages|last.link }}">Last</a>
                </li>
            {% else %}
                <li class="last btn disabled d-none">
                    Last</button>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}
